<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alert_list_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.preeti.myapplication.AlertListDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Doctor"
            android:id="@+id/tvRelation1" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor's Name:"
            android:id="@+id/tvDcoName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:id="@+id/tvDocEmail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDocPhone"
            android:text="Phone: "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CareGiver"
            android:id="@+id/tvRelation2" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Care Giver's Name:"
            android:id="@+id/tvCareName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:id="@+id/tvCareEmail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCarePhone"
            android:text="Phone: "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Family"
            android:id="@+id/tvRelation3" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family Member's Name:"
            android:id="@+id/tvFamilyName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:id="@+id/tvFamilyEmail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvFamilyPhone"
            android:text="Phone: "/>
        <Button
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/btnBackHomePage" />

        <Button
            android:text="Modify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/btnModifyAlertList" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
