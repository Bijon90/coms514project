<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.preeti.myapplication.UserProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tvfName"
            android:text="First Name:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tvlName"
            android:text="Last Name:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/tvEmail"
            android:text="@string/prompt_email"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tvUname"
            android:text="UserName:" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tvAge"
            android:text="Age:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="textPersonName"
            android:text="Sex:"
            android:ems="10"
            android:id="@+id/tvSex" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tvWeight"
            android:text="Weight:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tvHeight"
            android:text="Height:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tvHeartRate"
            android:text="Average Heart Rate:" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/tvMHistory"
            android:text="Medical History:" />
        <Button
            android:text="Back to Home Page"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/btnBackHomePage" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
